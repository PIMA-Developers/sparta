<schedule-grid-{{ ai_gen_id }}
  class="ai-schedule-grid-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.titulo != blank %}
    <h2 class="ai-schedule-title-{{ ai_gen_id }}">{{ block.settings.titulo }}</h2>
  {% endif %}

  {% assign has_classes = false %}
  {% if block.settings.aula_1_nome != blank or block.settings.aula_2_nome != blank or block.settings.aula_3_nome != blank or block.settings.aula_4_nome != blank or block.settings.aula_5_nome != blank or block.settings.aula_6_nome != blank or block.settings.aula_7_nome != blank or block.settings.aula_8_nome != blank or block.settings.aula_9_nome != blank or block.settings.aula_10_nome != blank %}
    {% assign has_classes = true %}
  {% endif %}

  {% unless has_classes %}
    <div class="ai-schedule-empty-state-{{ ai_gen_id }}">
      <h3>Configure suas aulas</h3>
      <p>Adicione as informações das aulas nas configurações do bloco para exibir a grade de horários.</p>
    </div>
  {% else %}

    {% if block.settings.mostrar_filtros %}
      <div class="ai-schedule-filters-{{ ai_gen_id }}">
        <button class="ai-schedule-filter-btn-{{ ai_gen_id }} active" data-filter="todos">
          Todos
        </button>
        <button class="ai-schedule-filter-btn-{{ ai_gen_id }}" data-filter="iniciante">
          Iniciante
        </button>
        <button class="ai-schedule-filter-btn-{{ ai_gen_id }}" data-filter="intermediario">
          Intermediário
        </button>
        <button class="ai-schedule-filter-btn-{{ ai_gen_id }}" data-filter="avancado">
          Avançado
        </button>
        <button class="ai-schedule-filter-btn-{{ ai_gen_id }}" data-filter="kids">
          Kids
        </button>
        <button class="ai-schedule-filter-btn-{{ ai_gen_id }}" data-filter="open-mat">
          Open Mat
        </button>
      </div>
    {% endif %}

    <div class="ai-schedule-table-container-{{ ai_gen_id }}">
      <table class="ai-schedule-table-{{ ai_gen_id }}">
        <thead>
          <tr>
            <th>Horário</th>
            <th>Segunda</th>
            <th>Terça</th>
            <th>Quarta</th>
            <th>Quinta</th>
            <th>Sexta</th>
            <th>Sábado</th>
          </tr>
        </thead>
        <tbody>
          {% assign time_slots = "06:00,07:00,08:00,09:00,10:00,11:00,12:00,13:00,14:00,15:00,16:00,17:00,18:00,19:00,20:00,21:00,22:00" | split: ',' %}
          {% assign days = "segunda,terca,quarta,quinta,sexta,sabado" | split: ',' %}
          
          {% for time_slot in time_slots %}
            <tr>
              <td class="ai-schedule-time-{{ ai_gen_id }}">{{ time_slot }}</td>
              {% for day in days %}
                <td>
                  {% for i in (1..10) %}
                    {% assign aula_dia_key = 'aula_' | append: i | append: '_dia' %}
                    {% assign aula_horario_key = 'aula_' | append: i | append: '_horario' %}
                    {% assign aula_nome_key = 'aula_' | append: i | append: '_nome' %}
                    {% assign aula_nivel_key = 'aula_' | append: i | append: '_nivel' %}
                    {% assign aula_professor_key = 'aula_' | append: i | append: '_professor' %}
                    
                    {% assign aula_dia = block.settings[aula_dia_key] %}
                    {% assign aula_horario = block.settings[aula_horario_key] | split: ' ' | first %}
                    {% assign aula_nome = block.settings[aula_nome_key] %}
                    {% assign aula_nivel = block.settings[aula_nivel_key] %}
                    {% assign aula_professor = block.settings[aula_professor_key] %}
                    
                    {% if aula_dia == day and aula_horario == time_slot and aula_nome != blank %}
                      <div class="ai-schedule-class-{{ ai_gen_id }} {{ aula_nivel }}" data-level="{{ aula_nivel }}">
                        <div class="ai-schedule-class-name-{{ ai_gen_id }}">
                          {{ aula_nome }}
                        </div>
                        <div class="ai-schedule-class-level-{{ ai_gen_id }}">
                          {% case aula_nivel %}
                            {% when 'iniciante' %}
                              Iniciante
                            {% when 'intermediario' %}
                              Intermediário
                            {% when 'avancado' %}
                              Avançado
                            {% when 'kids' %}
                              Kids
                            {% when 'open-mat' %}
                              Open Mat
                          {% endcase %}
                        </div>
                        {% if aula_professor != blank %}
                          <div class="ai-schedule-class-instructor-{{ ai_gen_id }}">
                            {{ aula_professor }}
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}
                  {% endfor %}
                </td>
              {% endfor %}
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="ai-schedule-mobile-{{ ai_gen_id }}">
      {% assign day_names = "segunda,terça,quarta,quinta,sexta,sábado" | split: ',' %}
      {% assign day_keys = "segunda,terca,quarta,quinta,sexta,sabado" | split: ',' %}
      
      {% for day_name in day_names %}
        {% assign day_key = day_keys[forloop.index0] %}
        {% assign day_has_classes = false %}
        
        {% for i in (1..10) %}
          {% assign aula_dia_key = 'aula_' | append: i | append: '_dia' %}
          {% assign aula_nome_key = 'aula_' | append: i | append: '_nome' %}
          {% if block.settings[aula_dia_key] == day_key and block.settings[aula_nome_key] != blank %}
            {% assign day_has_classes = true %}
            {% break %}
          {% endif %}
        {% endfor %}
        
        {% if day_has_classes %}
          <div class="ai-schedule-day-card-{{ ai_gen_id }}">
            <div class="ai-schedule-day-header-{{ ai_gen_id }}" onclick="toggleDay{{ ai_gen_id }}('{{ day_key }}')">
              <span>{{ day_name | capitalize }}</span>
              <span class="ai-schedule-arrow-{{ ai_gen_id }}">▼</span>
            </div>
            <div class="ai-schedule-day-content-{{ ai_gen_id }}" id="day-{{ day_key }}-{{ ai_gen_id }}">
              {% for i in (1..10) %}
                {% assign aula_dia_key = 'aula_' | append: i | append: '_dia' %}
                {% assign aula_horario_key = 'aula_' | append: i | append: '_horario' %}
                {% assign aula_nome_key = 'aula_' | append: i | append: '_nome' %}
                {% assign aula_nivel_key = 'aula_' | append: i | append: '_nivel' %}
                {% assign aula_professor_key = 'aula_' | append: i | append: '_professor' %}
                
                {% assign aula_dia = block.settings[aula_dia_key] %}
                {% assign aula_horario = block.settings[aula_horario_key] %}
                {% assign aula_nome = block.settings[aula_nome_key] %}
                {% assign aula_nivel = block.settings[aula_nivel_key] %}
                {% assign aula_professor = block.settings[aula_professor_key] %}
                
                {% if aula_dia == day_key and aula_nome != blank %}
                  <div class="ai-schedule-mobile-class-{{ ai_gen_id }} {{ aula_nivel }}" data-level="{{ aula_nivel }}">
                    <div class="ai-schedule-mobile-time-{{ ai_gen_id }}">
                      {{ aula_horario }}
                    </div>
                    <div class="ai-schedule-mobile-details-{{ ai_gen_id }}">
                      <div class="ai-schedule-class-name-{{ ai_gen_id }}">
                        {{ aula_nome }}
                      </div>
                      <div class="ai-schedule-class-level-{{ ai_gen_id }}">
                        {% case aula_nivel %}
                          {% when 'iniciante' %}
                            Iniciante
                          {% when 'intermediario' %}
                            Intermediário
                          {% when 'avancado' %}
                            Avançado
                          {% when 'kids' %}
                            Kids
                          {% when 'open-mat' %}
                            Open Mat
                        {% endcase %}
                      </div>
                      {% if aula_professor != blank %}
                        <div class="ai-schedule-class-instructor-{{ ai_gen_id }}">
                          {{ aula_professor }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.mostrar_legenda %}
      <div class="ai-schedule-legend-{{ ai_gen_id }}">
        <div class="ai-schedule-legend-title-{{ ai_gen_id }}">Legenda de Níveis</div>
        <div class="ai-schedule-legend-items-{{ ai_gen_id }}">
          <div class="ai-schedule-legend-item-{{ ai_gen_id }}">
            <div class="ai-schedule-legend-color-{{ ai_gen_id }} iniciante"></div>
            <span>Iniciante (Fundamentos)</span>
          </div>
          <div class="ai-schedule-legend-item-{{ ai_gen_id }}">
            <div class="ai-schedule-legend-color-{{ ai_gen_id }} intermediario"></div>
            <span>Intermediário</span>
          </div>
          <div class="ai-schedule-legend-item-{{ ai_gen_id }}">
            <div class="ai-schedule-legend-color-{{ ai_gen_id }} avancado"></div>
            <span>Avançado (Competição)</span>
          </div>
          <div class="ai-schedule-legend-item-{{ ai_gen_id }}">
            <div class="ai-schedule-legend-color-{{ ai_gen_id }} kids"></div>
            <span>Kids</span>
          </div>
          <div class="ai-schedule-legend-item-{{ ai_gen_id }}">
            <div class="ai-schedule-legend-color-{{ ai_gen_id }} open-mat"></div>
            <span>Open Mat</span>
          </div>
        </div>
      </div>
    {% endif %}

  {% endunless %}
</schedule-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class ScheduleGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupFilters();
      }

      setupFilters() {
        const filterButtons = this.querySelectorAll('.ai-schedule-filter-btn-{{ ai_gen_id }}');
        const classes = this.querySelectorAll('.ai-schedule-class-{{ ai_gen_id }}, .ai-schedule-mobile-class-{{ ai_gen_id }}');

        filterButtons.forEach(button => {
          button.addEventListener('click', () => {
            const filter = button.dataset.filter;
            
            filterButtons.forEach(btn => btn.classList.remove('active'));
            button.classList.add('active');

            classes.forEach(classElement => {
              if (filter === 'todos') {
                classElement.classList.remove('hidden');
              } else {
                if (classElement.dataset.level === filter) {
                  classElement.classList.remove('hidden');
                } else {
                  classElement.classList.add('hidden');
                }
              }
            });
          });
        });
      }
    }

    window.toggleDay{{ ai_gen_id }} = function(dayKey) {
      const content = document.getElementById(`day-${dayKey}-{{ ai_gen_id }}`);
      const arrow = content.previousElementSibling.querySelector('.ai-schedule-arrow-{{ ai_gen_id }}');
      
      if (content.classList.contains('expanded')) {
        content.classList.remove('expanded');
        arrow.textContent = '▼';
      } else {
        content.classList.add('expanded');
        arrow.textContent = '▲';
      }
    };

    customElements.define('schedule-grid-{{ ai_gen_id }}', ScheduleGrid{{ ai_gen_id }});
  })();
</script>

