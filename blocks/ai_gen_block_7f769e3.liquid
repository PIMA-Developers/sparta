{% doc %}
  @prompt
    Create a Announcement bar that allows me to add a logo at the left (i need to personalize that logo) and a menu at the right with the menu items separeted by a vertical bar. I need to personalize al the styles atribuits, Preciso poder adicionar at√© 3 logos lado a lado horizontalmente e atribuir um link personalizado a elas. O menu deve ser com menu picker
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-announcement-bar-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-announcement-bar-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    gap: 20px;
  }

  .ai-announcement-bar-logos-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.logos_gap }}px;
    flex-shrink: 0;
  }

  .ai-announcement-bar-logo-wrapper-{{ ai_gen_id }} {
    display: block;
  }

  .ai-announcement-bar-logo-{{ ai_gen_id }} {
    display: block;
    height: {{ block.settings.logo_height }}px;
    width: auto;
  }

  .ai-announcement-bar-logo-placeholder-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    height: {{ block.settings.logo_height }}px;
    width: 100px;
    background-color: {{ block.settings.placeholder_bg_color }};
    border-radius: 4px;
  }

  .ai-announcement-bar-logo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-announcement-bar-menu-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.menu_gap }}px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ai-announcement-bar-menu-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.menu_gap }}px;
  }

  .ai-announcement-bar-menu-link-{{ ai_gen_id }} {
    color: {{ block.settings.menu_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.menu_font_size }}px;
    font-weight: {{ block.settings.menu_font_weight }};
    text-transform: {{ block.settings.menu_text_transform }};
    transition: color 0.3s ease;
    white-space: nowrap;
  }

  .ai-announcement-bar-menu-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.menu_hover_color }};
  }

  .ai-announcement-bar-separator-{{ ai_gen_id }} {
    width: 1px;
    height: {{ block.settings.separator_height }}px;
    background-color: {{ block.settings.separator_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-announcement-bar-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 12px;
    }

    .ai-announcement-bar-menu-{{ ai_gen_id }} {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
{% endstyle %}

<announcement-bar-{{ ai_gen_id }} class="ai-announcement-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-announcement-bar-container-{{ ai_gen_id }}">
    <div class="ai-announcement-bar-logos-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign logo_key = 'logo_' | append: i
          assign link_key = 'logo_link_' | append: i
          assign logo = block.settings[logo_key]
          assign link = block.settings[link_key]
        %}

        {% if logo %}
          {% if link != blank %}
            <a href="{{ link }}" class="ai-announcement-bar-logo-wrapper-{{ ai_gen_id }}">
              <img
                src="{{ logo | image_url: height: block.settings.logo_height }}"
                alt="{{ logo.alt | escape }}"
                loading="lazy"
                height="{{ block.settings.logo_height }}"
                class="ai-announcement-bar-logo-{{ ai_gen_id }}"
              >
            </a>
          {% else %}
            <div class="ai-announcement-bar-logo-wrapper-{{ ai_gen_id }}">
              <img
                src="{{ logo | image_url: height: block.settings.logo_height }}"
                alt="{{ logo.alt | escape }}"
                loading="lazy"
                height="{{ block.settings.logo_height }}"
                class="ai-announcement-bar-logo-{{ ai_gen_id }}"
              >
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}

      {% if block.settings.logo_1 == blank and block.settings.logo_2 == blank and block.settings.logo_3 == blank %}
        <div class="ai-announcement-bar-logo-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    {% if block.settings.menu != blank %}
      <ul class="ai-announcement-bar-menu-{{ ai_gen_id }}">
        {% for link in block.settings.menu.links %}
          <li class="ai-announcement-bar-menu-item-{{ ai_gen_id }}">
            <a href="{{ link.url }}" class="ai-announcement-bar-menu-link-{{ ai_gen_id }}">
              {{ link.title }}
            </a>

            {% if forloop.last == false and block.settings.show_separators %}
              <div class="ai-announcement-bar-separator-{{ ai_gen_id }}"></div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</announcement-bar-{{ ai_gen_id }}>

<script>
  (function() {
    class AnnouncementBar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('announcement-bar-{{ ai_gen_id }}', AnnouncementBar{{ ai_gen_id }});
  })();
</script>

